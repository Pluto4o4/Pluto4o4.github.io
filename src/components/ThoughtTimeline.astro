---
import type { CollectionEntry } from 'astro:content'
import { render } from 'astro:content'
import { dateString } from '~/utils'

interface Props {
  thought: CollectionEntry<'thoughts'>
}

const { thought } = Astro.props

// 渲染 markdown 内容
const { Content } = await render(thought)
---

<li class="my-6">
  <div class="text-foreground text-base prose">
    <Content />
  </div>
  <div class="text-foreground/80 text-sm mt-2">
    <time>{dateString(thought.data.published)}</time>
  </div>
</li>
